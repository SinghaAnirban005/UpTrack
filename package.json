{
  "name": "UpTrack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build:backend": "cd apps/api && tcs -b",
    "start:backend": "cd apps/api && node dist/index.js",
    "start:pub": "cd apps/pusher && node dist/index.js",
    "start:worker": "cd apps/worker && node dist/index.js",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "postinstall": "prisma generate --schema=./packages/prisma/prisma/schema.prisma"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
